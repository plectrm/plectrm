{
  "name": "plectrm",
  "version": "0.1.1",
  "description": "ASCII Tab Editor",
  "main": "src/main.js",
  "scripts": {
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:3000 && cross-env NODE_ENV=development electron .",
    "dev": "concurrently -k -s first \"npm:dev:vite\" \"npm:dev:electron\"",
    "build": "vite build",
    "app:dir": "npm run build && electron-builder --dir",
    "app:dist": "npm run build && electron-builder",
    "app:publish": "npm run build && electron-builder --publish=always"
  },
  "author": "memrye <maevecrancher@protonmail.com>",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "vite": "^7.1.5",
    "wait-on": "^8.0.5"
  },
  "dependencies": {
    "electron-updater": "^6.3.9"
  },
  "build": {
    "productName": "plectrm",
    "appId": "com.memrye.plectrm",
    "copyright": "Copyright Â© 2026 memrye",
    "directories": {
      "output": "release"
    },
    "files": [
      "src/**/*",
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Office",
      "icon": "build/icons",
      "desktop": {
        "entry": {
          "StartupWMClass": "plectrm"
        }
      }
    },
    "publish": {
      "provider": "github",
      "owner": "memrye",
      "repo": "plectrm",
      "releaseType": "release"
    }
  }
}
